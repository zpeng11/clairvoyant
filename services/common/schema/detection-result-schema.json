{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Detection Result Schema",
  "description": "Detection results from AI Inference to Network Gateway via UDS",
  "type": "object",
  "required": ["stream_id", "sequence", "width", "height", "status", "model_name", "timestamp"],
  "properties": {
    "stream_id": {
      "type": "string",
      "description": "RTSP stream identifier"
    },
    "sequence": {
      "type": "number",
      "minimum": 0,
      "description": "Frame sequence number"
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "description": "Frame width in pixels"
    },
    "height": {
      "type": "number",
      "minimum": 1,
      "description": "Frame height in pixels"
    },
    "inference_time": {
      "type": "number",
      "minimum": 0,
      "description": "AI inference duration in nanoseconds"
    },
    "status": {
      "type": "string",
      "enum": ["success", "error"],
      "description": "Processing status"
    },
    "model_name": {
      "type": "string",
      "description": "Model name used for inference"
    },
    "timestamp": {
      "type": "number",
      "description": "Detection timestamp in nanoseconds"
    },
    "detections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "class_id": {
            "type": "number",
            "description": "Class ID"
          },
          "class_name": {
            "type": "string",
            "description": "Class name"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score"
          },
          "bbox": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number",
                "description": "Bounding box X coordinate"
              },
              "y": {
                "type": "number",
                "description": "Bounding box Y coordinate"
              },
              "width": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box width"
              },
              "height": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box height"
              }
            },
            "required": ["x", "y", "width", "height"]
          }
        },
        "required": ["class_id", "class_name", "confidence", "bbox"]
      },
      "description": "Detection results array (optional)"
    }
  }
}
