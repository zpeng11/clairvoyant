{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DMA-BUF Message Schema",
  "description": "Unified message schema for DMA-BUF zero-copy frame sharing",
  "type": "object",
  "required": ["direction", "stream_id", "sequence"],
  "properties": {
    "direction": {
      "type": "string",
      "enum": ["send", "return"],
      "description": "Message direction: send from Stream Engine to AI Inference, return from AI Inference to Stream Engine"
    },
    "stream_id": {
      "type": "string",
      "description": "RTSP stream identifier (both directions)"
    },
    "sequence": {
      "type": "number",
      "minimum": 0,
      "description": "Frame sequence number (both directions)"
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "description": "Frame width in pixels (both directions)"
    },
    "height": {
      "type": "number",
      "minimum": 1,
      "description": "Frame height in pixels (both directions)"
    },
    "format": {
      "type": "string",
      "description": "Pixel format e.g. NV12, YUV420P (send direction only)"
    },
    "timestamp": {
      "type": "number",
      "description": "Frame timestamp in nanoseconds (send direction only)"
    },
    "inference_time": {
      "type": "number",
      "minimum": 0,
      "description": "AI inference duration in nanoseconds (return direction only)"
    },
    "status": {
      "type": "string",
      "enum": ["success", "error"],
      "description": "Processing status (return direction only)"
    },
    "model_name": {
      "type": "string",
      "description": "Model name used for inference (return direction only)"
    },
    "timestamp": {
      "type": "number",
      "description": "Detection timestamp in nanoseconds (return direction only)"
    },
    "detections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "class_id": {
            "type": "number",
            "description": "Class ID"
          },
          "class_name": {
            "type": "string",
            "description": "Class name"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score"
          },
          "bbox": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number",
                "description": "Bounding box X coordinate"
              },
              "y": {
                "type": "number",
                "description": "Bounding box Y coordinate"
              },
              "width": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box width"
              },
              "height": {
                "type": "number",
                "minimum": 0,
                "description": "Bounding box height"
              }
            },
            "required": ["x", "y", "width", "height"]
          }
        },
        "required": ["class_id", "class_name", "confidence", "bbox"]
      },
      "description": "Detection results array (return direction only, optional)"
    }
  },
  "if": {
    "properties": {
      "direction": {
        "const": "send"
      }
    }
  },
  "then": {
    "required": ["format", "timestamp"]
  },
  "else": {
    "if": {
      "properties": {
        "direction": {
          "const": "return"
        }
      }
    },
    "then": {
      "required": ["inference_time", "status", "model_name", "timestamp"]
    }
  }
}
